{
  "name": "Weather",
  "version": "1.3",
  "description": "The best weather extension using ForeCast.io API",
  "icons": {
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "background": {
    "scripts": ["vendor/js/jquery-2.1.4.min.js", "vendor/js/moment.min.js", "js/popup.js", "js/background.js"]
  },
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "browser_action" : {
	"default_icon": "img/icon38.png",
    "default_title": "Weather",
    "default_popup": "popup.html"
  },
  "manifest_version": 2,
  "permissions": [ "alarms", "storage", "geolocation", "*://*.forecast.io/*"]
}
